@using Tarea2BDRazor.Models
 
@{
    ViewBag.Title = "VerPerfil";
 
}
 
<h2>@ViewBag.NombreUsuario</h2>
 
@section featured {
    <section class="featured">
        <div class="content-wrapper">
 
 @if (int.Parse(Session["IDG"].ToString()) != 4) {
    <text>
        ¡Hola, @Html.ActionLink(Session["user_name"].ToString(), "MiPerfil", "Home")!
        @Html.ActionLink("Logout", "Logout", "Home")
        @Html.ActionLink("Inicio", "Categorias", "Home")
    </text>
    }
   else
   {
      @Html.ActionLink("Inicio", "Index", "Home")
   }
}
            <br />
<img src="@ViewBag.AvatarUrl" />

@{
    Usuario user = new Usuario();
    {
        @Html.ActionLink("Editar Perfil", "EditarPerfil", "Home")
    }
}
           
<ul>
    <li>Nombre: @ViewBag.NombreUsuario</li>
    <li>Edad: @ViewBag.Edad</li>
    <li>Sexo: @ViewBag.Sexo</li>
    <li>Numero de comentarios: @ViewBag.Ncomentarios</li>
    <li>Fecha de Registro: @ViewBag.FechaRegistro</li>
    <li>Tipo de Usuario: @ViewBag.TipoUsuario</li>
    <li>Últimos temas creados:
        <ul>
            @{ 
                foreach (ViewTemasCreados elemento in ViewBag.TemasCreados)
                {
                   
                    <li>@elemento.nombre_tema</li>
                               
                }
                
            }
        </ul>
     <li>Últimos temas comentados:
         <ul>
            @{
                foreach (ViewUltimosComentarios elemento in ViewBag.ComentariosRealizados)
                {
                    <li>@elemento.nombre_tema</li>
                }
            }
         </ul>
    </li>
    </li>
</ul>
            </div>
        </section>
            }