@{
    ViewBag.Title = "Crear_tema";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">

 @if (int.Parse(Session["IDG"].ToString()) != 4) {
    <text>
        ¡Hola, @Html.ActionLink(Session["user_name"].ToString(), "MiPerfil", "Home")!
        @Html.ActionLink("Logout", "Logout", "Home")
        @Html.ActionLink("Inicio", "Categorias", "Home")
        @Html.ActionLink("Mail", "BuzonEntrada", "Home")
    </text>
    }
   else
   {
      @Html.ActionLink("Inicio", "Index", "Home")
   }
}

<script type="text/javascript">
    function valuecheck(check) {
        check.value = "1";
    };
 
    </script>
<h2>Crear Tema</h2>


@using (Html.BeginForm("IngresarTema", "Categorias", FormMethod.Post))
{
    
    <fieldset>
        <legend> Ingrese sus datos </legend>
        <p>
            <label for="Nombre">Nombre:</label>
            @Html.TextBox("nombre")
        </p>
        <p>
            <label for="Descripción">Descripción:</label>
            @Html.TextArea("descripcion", new { cols = 60, rows = 10 })
        </p>

        <p>
            <label for="Publico">Público:</label>
            @Html.CheckBox("publico", true, new { onclick = "valuecheck(this)" })
        </p>
         
         <p>
            <label for="Mensaje">Mensaje:</label>
            @Html.TextArea("mensaje", new { cols = 60, rows = 10 })
        </p>


        <p>
            <input type="submit" value="Crear Tema" />
        </p>
    </fieldset>
}
            </div>
        </section>
            }